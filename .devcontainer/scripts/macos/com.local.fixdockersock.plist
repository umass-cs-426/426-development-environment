<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>com.local.fixdockersock</string>
  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/bin/fix-docker-sock-perms.sh</string>
  </array>
  <key>RunAtLoad</key>
  <true/>
  <key>KeepAlive</key>
  <false/>
  <key>StartOnMount</key>
  <true/>
  <key>StandardOutPath</key>
  <string>/var/log/fix-docker-sock-perms.log</string>
  <key>StandardErrorPath</key>
  <string>/var/log/fix-docker-sock-perms.err</string>
  <key>WatchPaths</key>
  <array>
    <string>/var/run/docker.sock</string>
  </array>
</dict>
</plist>
